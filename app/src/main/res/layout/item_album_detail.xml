<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_album_item_bg">
    <TextView
        android:layout_centerVertical="true"
        android:id="@+id/order_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="26sp"
        android:padding="20dp"
        android:textColor="#979797"/>
    <LinearLayout
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/order_text"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/detail_item_title"
            android:layout_marginRight="10dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="大标题"
            android:textColor="#000000"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_marginTop="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/detail_item_play_count"
                android:drawableLeft="@mipmap/play_info_icon"
                android:drawablePadding="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#979797"
                android:text="14.4w"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/detail_item_duration"
                android:layout_marginLeft="20dp"
                android:drawablePadding="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#979797"
                android:drawableLeft="@mipmap/ic_sound"
                android:text="00:05"
                android:textSize="12sp"/>
        </LinearLayout>
    </LinearLayout>
        <TextView
            android:id="@+id/detail_item_update_time"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2022-1-14"
            android:textSize="12sp"
            android:layout_alignParentRight="true"
            android:textColor="#979797"
            android:layout_marginRight="20dp"/>
</RelativeLayout>